{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "quotes": [
            "warn",
            "single"
        ],
        "no-console": "warn",
        "no-var": "warn",
        "no-unused-vars": "warn",
        "semi": "error"
    },
    "ignorePatterns":[
        "build/*",
        "types/**/*",
        "demos/**/*",
        "rollup.config.mjs"
    ]
}
